[module/start]
type = custom/text
content = %{F#000000}%{T0}   
click-left = $HOME/.config/lybspwm/lysof/lystart/lystart

[module/screenshooter]
type = custom/text
content = %{F#000000}%{T0}
click-left = mate-screenshot -a

[module/arrow]
type = custom/text
content = %{F#000000}
click-left = $HOME/.config/lybspwm/stalonetray/stalonetray_launch
#click-right = bash $HOME/.config/polybar/scripts/killbar.sh

#[module/polywins]
#type = custom/script
#exec = $HOME/.config/lydesktop/software/polybar/scripts/polywins_white.sh 2>/dev/null
